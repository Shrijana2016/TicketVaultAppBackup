<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shrij.tut3.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket Vault"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="16dp"
        tools:text="@string/txtTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="40dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Number of Tickets"
        android:inputType="number"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="105dp"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/txtGroup"
        android:layout_alignLeft="@+id/txtGroup"
        android:layout_alignStart="@+id/txtGroup" />

    <Spinner
        android:id="@+id/txtGroup"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:entries="@array/txtGroup"
        android:spinnerMode="dialog"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="202dp"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/btnCost"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="344dp" />

    <Button
        android:id="@+id/btnCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the Cost"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="330dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="174dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/concert"
        android:layout_alignTop="@+id/btnCost"
        android:layout_marginTop="60dp" />


</RelativeLayout>